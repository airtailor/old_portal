<main>
  <div class="section-header">
    <h2>Admin Home</h2>
  </div>

  <div class="container">

    <div class="admin-welcome">
      <h2>Greetings Master</h2>
      <p>Whatchu Wanna Do?</p>
    </div>

    <div id="admin-manage-area">

      <div id="admin-orders">
        <a href="/orders/new_orders"><button class="caps">Manage<br> New Orders</button></a><br><br>
        <%= @orders.count %> unassigned orders
      </div>

      <div id="admin-messages">
        <a href="/conversations"><button class="caps">Manage<br> Messages</button></a><br><br>
        <%= @messages.count-3 %> unread messages
      </div>

      <div id="minions">
        <a href="/users"><button class="caps">Manage<br> Tailors</button></a>
      </div>

    </div>

    <br>

    <br>

    <div id="dashboard">

    <hr>
    <h1>Dashboard</h1>
    <span id="all-button" class="dashboard-button">All Stats</span>
    <span id="this-week-button" class="dashboard-button">This Week</span>
    <span id="last-week-button" class="dashboard-button">Last Week</span>
    <span id="this-month-button" class="dashboard-button">This Month</span>
    <span id="last-month-button" class="dashboard-button">Last Month</span>
    <br><br>

      <div id="this-week" class="dashboard-row">

        <div class="dashboard-column">
          <h3>Kits sent this week:</h3><br>
          <p><%= @this_week_kits.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Orders placed this week:</h3><br>
          <p><%= @this_week.count %></p>
          <% if @this_week.count > 0 %>
            <%= line_chart Order.group_by_day(:created_at).count %>
          <% end %>
        </div>

        <div class="dashboard-column">
          <h3>Revenue this week:</h3><br>
          <p>$<%= "%.2f" % @this_week_rev %></p>
        </div>

        <div class="dashboard-column">
          <h3>Avg order $$ this week:</h3><br>
          <p>$<%= "%.2f" % @this_week_rev_per_order %></p>
        </div>

        <div class="dashboard-column">
          <h3>Estimated profit:</h3><br>
          <p>$<%= "%.2f" % @current_week_profit %></p>
        </div>
      </div>
      <!-- end of row 1 -->

      <div id="last-week" class="dashboard-row">

        <div class="dashboard-column">
          <h3>Kits sent last week:</h3><br>
          <p><%= @last_week_kits.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Orders placed last week:</h3><br>
          <p><%= @last_week.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Revenue last week:</h3><br>
          <p>$<%= "%.2f" % @last_week_rev %></p>
        </div>

        <div class="dashboard-column">
          <h3>Avg order $$ last week:</h3><br>
          <p>$<%= "%.2f" % @last_week_rev_per_order %></p>
        </div>

        <div class="dashboard-column">
          <h3>Estimated profit:</h3><br>
          <p>$<%= "%.2f" % @previous_week_profit %></p>
        </div>
      </div>

      <!-- end of row 2 -->

      <div id="this-month" class="dashboard-row">

        <div class="dashboard-column">
          <h3>Kits sent this month:</h3><br>
          <p><%= @this_month_kits.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Orders placed this month:</h3><br>
          <p><%= @this_month.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Revenue this month:</h3><br>
          <p>$<%= "%.2f" % @this_month_rev %></p>
        </div>

        <div class="dashboard-column">
          <h3>Avg order $$ this month:</h3><br>
          <p>$<%= "%.2f" % @this_month_rev_per_order %></p>
        </div>

        <div class="dashboard-column">
          <h3>Estimated profit:</h3><br>
          <p>$<%= "%.2f" % @current_estimated_profit %></p>
        </div>
      </div>
      <!-- end of row 3 -->

      <div id="last-month" class="dashboard-row">

        <div class="dashboard-column">
          <h3>Kits sent last month:</h3><br>
          <p><%= @last_month_kits.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Orders placed last month:</h3><br>
          <p><%= @last_month.count %></p>
        </div>

        <div class="dashboard-column">
          <h3>Revenue last month:</h3><br>
          <p>$<%= "%.2f" % @last_month_rev %></p>
        </div>

        <div class="dashboard-column">
          <h3>Avg order $$ last month:</h3><br>
          <p>$<%= "%.2f" % @last_month_rev_per_order %></p>
        </div>

        <div class="dashboard-column">
          <h3>Estimated profit:</h3><br>
          <p>$<%= "%.2f" % @previous_estimated_profit %></p>
        </div>
      </div>
      <!-- end of row 4 -->

    </div>
    <!-- end of dashboard -->


  </div>
</main>






