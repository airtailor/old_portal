<main>
  <div class="section-header">
    <h2>Dashboard</h2>
  </div>

  <div class="container">

    <div id="data-dashboard">
      <%= form_tag(dashboard_path(@kits), :method => "get", :id => "date-search") do %>
        <%= month_field_tag :search, params[:search], placeholder: "Select Month" %><br>
        <%= submit_tag "Search", :name => nil %>
      <% end %>

      <br><br>

      Number of Signups: <%= @kits.length %><br>
      Number of Orders: <%= @orders.length %><br>
      <% if @kits.length.to_f > 0 %>
        Conversion Rate: <%= ((@orders.length.to_f/@kits.length.to_f)*100).to_i %>%
      <% else %>
        Conversion Rate: <%= (((@orders.length.to_f)/1)*100).to_i %>%
      <% end %>

      <br><br>

      <div id="date-output">
        <% @orders.each do |order| %>
          <% @total += order.total.to_f %>
          <% @profit += (((order.total.to_f - 6)*0.35)-5) %>
        <% end %>
      </div>

      Total Revenue: $<%= "%.2f" % @total %><br>
      <% if @orders.length.to_f > 0 %>
        Avg. Order Revenue: $<%= "%.2f" % (@total / @orders.length.to_f) %>
      <% else %>
        Avg. Order Revenue: $<%= "%.2f" % (@total / 1) %>
      <% end %>
      <br>
      Estimated Profit: $<%= "%.2f" % @profit %>

    </div>
  </div>
</main>
